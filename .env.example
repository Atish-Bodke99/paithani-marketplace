# Environment Variables for Paithani Marketplace
# Copy this to .env and fill in your values

# MongoDB Connection String
MONGO_URI=mongodb://127.0.0.1:27017/paithaniDB

# Session Secret (use a random string for production)
SESSION_SECRET=your-secret-key

# Port (optional, defaults to 4000)
PORT=4000

# Twilio Credentials (for OTP, if used)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-number

# Email Credentials (for nodemailer, if used)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password